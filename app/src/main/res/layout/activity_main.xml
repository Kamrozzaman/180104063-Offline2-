<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:layout_gravity="center"

    tools:context=".MainActivity">


    <Button
        android:id="@+id/gpabutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="20sp"
        android:layout_y="150sp"
        android:height="80sp"
        android:width="150sp"
        android:textStyle="italic"
        android:textSize="20sp"
        android:background="#0E94D1"
        android:text="GPA CALCULATOR"/>


    <Button
        android:id="@+id/cgpabutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="190sp"
        android:layout_y="150sp"
        android:height="80sp"
        android:width="150sp"
        android:textStyle="italic"
        android:textSize="20sp"
        android:background="#0E94D1"
        android:text="CGPA CALCULATOR"/>

    <Button
        android:id="@+id/gradingsystem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="190sp"
        android:layout_y="250sp"
        android:height="80sp"
        android:width="150sp"
        android:textStyle="italic"
        android:textSize="20sp"
        android:background="#0E94D1"
        android:text="GRADING SYSTEM"/>

    <Button
        android:id="@+id/help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="20sp"
        android:layout_y="250sp"
        android:height="80sp"
        android:width="150sp"
        android:textStyle="italic"
        android:textSize="20sp"
        android:background="#0E94D1"
        android:text="HELP"/>




</AbsoluteLayout>